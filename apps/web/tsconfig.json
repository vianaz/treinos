{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@themes": ["src/styles/themes/index.ts"],
      "@components": ["src/components/index.ts"]
    },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/vitest-setup/index.ts",
    "src/styles/styled.d.ts"
  ],
  "exclude": ["node_modules", ".next"],
  "extends": "ts-config/nextjs.json"
}
